<h1>Editing Book</h1>
  <%= form_for(@book) do |f| %>
    <% if @book.errors.any? %>
      <%= @book.errors.count %>errors
      <% @book.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end%>
      <h4>Title</h4>
        <div class="edit-field">
          <%= f.text_field :title %>
        </div>  
      <h4>Body</h4>
        <div class="edit-area">
          <%= f.text_area :body %>
        </div>
      <div class="edit-update">
        <%= f.submit "Update Book" %> 
      </div>
  <% end %>
    <%= link_to "Show", book_path(@book) %>
    |
    <%= link_to "Back", books_path %>