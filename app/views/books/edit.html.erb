<h1>Editing Book</h1>
  <%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <div class="edit-field">
    <%= f.text_field :title %>
    </div>  
    <h4>Body</h4>
    <div class="edit-area">
    <%= f.text_area :body %>
    </div>
    <div class="edit-update">
    <%= f.submit "Update Book" %> 
    </div>
  <% end %>
    <%= link_to "Show", book_path(@book) %>
    |
    <%= link_to "Back", books_path(@book) %>